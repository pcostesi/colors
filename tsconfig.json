{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "typingOptions": {
        "enableAutoDiscovery": true
    },
    "enableAutoDiscoveryDefinition": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true
}
